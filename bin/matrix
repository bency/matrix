#!/usr/bin/env php
<?php
include __DIR__ . "/../src/Layout.php";
include __DIR__ . "/../src/Row.php";
include __DIR__ . "/../src/Pixel.php";
include __DIR__ . "/../src/Alphabet.php";

$debug = false;
foreach ($_SERVER['argv'] as $arg) {
    if ('--debug' == $arg) {
        $debug = true;
    }
}
$layout = new Matrix\Layout();
$layout->setWording('MATRIX RAIN');
$layout->enableMarquee();
$layout->run($debug);
