#!/usr/bin/env php
<?php
if (file_exists(__DIR__.'/../../../autoload.php')) {
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

$debug = false;
$wording = '';
$timer = false;
$timer_format = 'H:i:s';
$marquee = false;
foreach ($_SERVER['argv'] as $key => $arg) {
    if ('--debug' == $arg) {
        $debug = true;
    }
    if ('--wording' == $arg) {
        $wording = $_SERVER['argv'][$key + 1];
    }
    if ('--timer' == $arg) {
        $timer = true;
    }
    if ('--timer-format' == $arg) {
        $timer_format = $_SERVER['argv'][$key + 1];
    }
    if ('--marquee' == $arg) {
        $marquee = true;
    }
}
$layout = new Matrix\Layout();
$options = [
    'debug' => $debug,
    'marquee' => $marquee,
    'wording' => $wording,
    'timer' => $timer,
    'timer_format' => $timer_format
];
$layout->run($options);
