#!/usr/bin/env php
<?php
include __DIR__ . "/../vendor/autoload.php";

$debug = false;
foreach ($_SERVER['argv'] as $arg) {
    if ('--debug' == $arg) {
        $debug = true;
    }
}
$layout = new Matrix\Layout();
$options = [
    'debug' => $debug,
    'marquee' => true,
    'timer' => true,
    'timer_format' => 'H:i:s'
];
$layout->run($options);
